extends layout

block content
    .row(ng-repeat='post in posts | orderBy: "-updated"')
        .col-md-10.offset-md-1.about-content-main.text-xs-left.col-xs-12
            .row#post-row-1
                h2#post-row-1-heading {{ post.title }}
                p#post-row-1-body {{ post.body }}
            .row#post-row-2
                .col-md-4.text-xs-center
                    a.btn.btn-primary.btn-lg.text-nowrap#post-row-btn(href='{{post.link}}')
                        span.fa.fa-pied-piper.pull-left.fa-2x
                        | {{ post.author }}
                        br
                        | {{ post.updated | date : 'short'}}
                .col-md-4.text-xs-center
                    a.btn.btn-success.btn-lg.text-nowrap#post-row-btn(href='{{post.link}}')
                        span.fa.fa-user.pull-left.fa-2x
                        | {{ post.author }}
                        br
                        | {{ post.updated | date : 'short'}}
                .col-md-4.text-xs-center
                    a.btn.btn-danger.btn-lg.text-nowrap#post-row-btn(href='{{post.link}}')
                        span.fa.fa-floppy-o.pull-left.fa-2x
                        | {{ post.author }}
                        br
                        | {{ post.updated | date : 'short'}}
            .row#post-row-3
                .col-md-4
                    img.img-rounded(ng-src='{{post.link}}', width="100%", height="auto")
                .col-md-4
                    img.img-rounded(ng-src='{{post.link}}', width="100%", height="auto")
                .col-md-4
                    img.img-rounded(ng-src='{{post.link}}', width="100%", height="auto")
